{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "name": "recipes"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "breakfast",
        "lunch",
        "dinner",
        "dessert",
        "soup",
        "drink",
        "starter"
      ],
      "required": true,
      "default": "breakfast"
    },
    "difficulity": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard"
      ],
      "required": true,
      "default": "medium"
    },
    "time": {
      "type": "integer",
      "required": true
    },
    "img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "preparation": {
      "type": "text",
      "required": true
    },
    "ingredients": {
      "type": "richtext",
      "required": true
    }
  }
}
